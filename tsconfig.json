{
  "filesGlob": [
    "typings/tsd.d.ts",
    "*.ts{,x}",
    "tasks/**/*.ts{,x}",
    "server/**/*.ts{,x}",
    "client/**/*.ts{,x}"
  ],
  "compileOnSave": false,
  "files": [
    "typings/tsd.d.ts",
    "gulpfile.config.ts",
    "gulpfile.ts",
    "gulpfile.types.ts",
    "tasks/build/css/index.ts",
    "tasks/build/html/index.ts",
    "tasks/build/index.ts",
    "tasks/build/js/client/build/index.ts",
    "tasks/build/js/client/build/webpack.config.ts",
    "tasks/build/js/client/index.ts",
    "tasks/build/js/client/lib/index.ts",
    "tasks/build/js/client/lib/webpack.config.ts",
    "tasks/build/js/index.ts",
    "tasks/build/js/server/index.ts",
    "tasks/index.ts",
    "tasks/serve/index.ts",
    "server/index.ts",
    "client/js/lib/entry.ts",
    "client/js/src/app.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "isolatedModules": true
  }
}
