{
  "filesGlob": [
    "./typings/tsd.d.ts",
    "./**/*.ts{,x}",
    "!./node_modules/**",
    "!./.tmp/**",
    "!./typings/*/*"
  ],
  "compileOnSave": false,
  "files": [
    "./typings/tsd.d.ts",
    "./client/js/src/app.tsx",
    "./client/js/src/component/HelloWorld.tsx",
    "./gulpfile.config.ts",
    "./gulpfile.config.types.ts",
    "./gulpfile.ts",
    "./gulpfile.types.ts",
    "./server/index.ts",
    "./tasks/build/css/index.ts",
    "./tasks/build/html/index.ts",
    "./tasks/build/index.ts",
    "./tasks/build/js/client/build/index.ts",
    "./tasks/build/js/client/index.ts",
    "./tasks/build/js/client/lib/index.ts",
    "./tasks/build/js/index.ts",
    "./tasks/build/js/server/index.ts",
    "./tasks/index.ts",
    "./tasks/serve/index.ts"
  ],
  "exclude": [
    "node_modules",
    ".tmp",
    "typings"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "allowSyntheticDefaultImports": true
  }
}
