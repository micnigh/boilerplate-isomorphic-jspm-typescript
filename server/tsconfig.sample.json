{
  "filesGlob": [
    "../**/*.ts{,x}",
    "!../node_modules/**",
    "../node_modules/@types/*/index.d.ts",
    "../node_modules/*/index.d.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "isolatedModules": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2016",
      "es2017"
    ]
  }
}
