{
  "filesGlob": [
    "**/*.ts{,x}",
    "!node_modules/**",
    "node_modules/@types/*/index.d.ts",
    "node_modules/*/index.d.ts"
  ],
  "compileOnSave": false,
  "files": [],
  "atom": {
    "rewriteTsconfig": true
  },
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "jsx": "preserve",
    "isolatedModules": true,
    "moduleResolution": "node",
    "experimentalDecorators": true
  }
}
